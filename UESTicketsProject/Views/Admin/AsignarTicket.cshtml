@model UESTicketsProject.Data.Models.NuevoTicket
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Asignación de tickets</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Agregar Nuevo Rol
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("AsignarTicketResponse", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(x=>x.Ticket.Id)
                            <div class="form-group">
                                <label>Estado:</label>
                                <p>@Model.Ticket.EstadoActual.Nombre</p>
                            </div>
                            <div class="form-group">
                                <label>Titulo:</label>
                                <p>@Model.Ticket.Titulo</p>
                            </div>
                            <div class="form-group">
                                <label>Description:</label>
                                <p>@Model.Ticket.Descripcion</p>
                            </div>
                            <div class="form-group">
                                <label>Reportado por:</label>
                                <p>@Model.Ticket.Reporter.Nombres</p>
                            </div>
                            <div class="form-group">
                                <label>Tipo:</label>
                                @if (Model.Ticket.TipoTicket == 1)
                                {
                                    <p> Software </p>
                                }
                                else
                                {
                                    <p>Hardware</p>
                                }
                            </div>
                            <div class="form-group">
                                <label>Asignar a:</label>
                                @Html.DropDownListFor(m => m.Ticket.UsuarioAsignado, new SelectList(Model.Usuarios, "Id", "Nombres"), new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Prioridad:</label>
                                @Html.DropDownListFor(m => m.Ticket.PrioridadId, new SelectList(Model.Prioridades, "Id", "Nombre"), new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-default">Guardar</button>
                            <button type="reset" class="btn btn-default">Limpiar</button>
                        }
                       
                    </div>                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
