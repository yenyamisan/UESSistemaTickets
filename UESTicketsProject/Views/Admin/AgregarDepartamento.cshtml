@model UESTicketsProject.Data.Entities.Departamento
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"style="color:seagreen">Departamentos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("CrearDepartamento", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label style="color:seagreen">Nombre de Departamento</label>
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                               
                            </div>

                            <button type="submit" class="btn btn-default"style="color:aliceblue;background-color: seagreen">Guardar</button>
                            <button type="reset" class="btn btn-default"style="color:aliceblue;background-color: seagreen">Limpiar</button>
                        }

                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
