@model UESTicketsProject.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<center style="background-color:seagreen; margin-left:25%; margin-top:15%; width:500px; right:800px" >
   
    <div style="border:none">
          <div><h1><label>TICKET SYSTEM</label></h1></div>

            @using (Html.BeginForm("LoginResponse", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))

            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Usuario:</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Contraseña:</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <button type="submit">Iniciar Sesión</button>
            }
       
    </div>
</center>

