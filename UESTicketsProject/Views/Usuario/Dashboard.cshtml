@model UESTicketsProject.Models.UsuarioDashboardModel
@{
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Bienvenido @Model.Usuario.Nombres</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Lista de tickets assignados a ti:
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <table>
                            <tr>
                                <th>Fecha de creación</th>
                                <th>Prioridad</th>
                                <th>Reportado por</th>
                                <th>Departamento</th>
                            </tr>
                            @foreach (var t in Model.Tickets)
                            {
                                <tr>
                                    <td>@t.FechaCreacion.ToShortDateString()</td>
                                    <td>@t.Prioridad.Nombre</td>
                                    <td>@t.Reporter.Nombres</td>
                                    <td>@t.Reporter.Departamento.Nombre</td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->